<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Cost</th>
      <th>Location</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.duration %></td>
        <td><%= listing.cost %></td>
        <td><%= listing.city %>, <%= listing.state %></td>

        <% if listing.image.attached? == true %>
          <td> <%= cl_image_tag(listing.image.key, crop: :scale, width: 100, cloud_name: 'dotjus') %> </td>
        <% end %>

        <td><%= link_to 'Show', listing %></td>

        <% if user_signed_in? && current_user.has_role?(:admin) %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
