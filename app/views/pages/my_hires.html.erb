<h4> My Hires </h4>

<h4> Things I am borrowing... </h4>
<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Duration</th>
        <th>Cost</th>
        <th>Location</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @my_borrowing.each do |borrow| %>
            <td><%= borrow.name %></td>
            <td><%= borrow.description %></td>
            <td><%= borrow.duration %></td>
            <td><%= borrow.cost %></td>
            <td><%= borrow.city %>, <%= borrow.state %></td>

            <% if borrow.image.attached? == true %>
                <td> <%= cl_image_tag(borrow.image.key, crop: :fill, width: 100, height: 100, cloud_name: 'dotjus') %> </td>
            <% end %>
            
            <td><%= link_to 'Show', borrow %></td>

      <% end %>
    </tbody>
  </table>

  <br>
  <br>

  <h4> Things I am loaning... </h4>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Duration</th>
        <th>Cost</th>
        <th>Location</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @my_loans.each do |loan| %>
            <td><%= loan.name %></td>
            <td><%= loan.description %></td>
            <td><%= loan.duration %></td>
            <td><%= loan.cost %></td>
            <td><%= loan.city %>, <%= loan.state %></td>

            <% if loan.image.attached? == true %>
                <td> <%= cl_image_tag(loan.image.key, crop: :fill, width: 100, height: 100, cloud_name: 'dotjus') %> </td>
            <% end %>
            
            <td><%= link_to 'Show', loan %></td>
            <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>